# .env.example
# 환경 변수 템플릿 - 실제 사용 시 .env로 복사 후 값 변경
#
# 사용법:
#   cp .env.example .env
#   nano .env  # 실제 값 입력

#############################################
# Database (PostgreSQL)
#############################################
DB_NAME=chatdb
DB_USER=chatuser
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

#############################################
# ActiveMQ Artemis
#############################################
ARTEMIS_USER=admin
ARTEMIS_PASSWORD=CHANGE_THIS_PASSWORD

#############################################
# Redis
#############################################
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

#############################################
# JWT Authentication
#############################################
# 최소 256비트 (32자 이상)
JWT_SECRET=CHANGE_THIS_TO_256_BIT_SECRET_KEY_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=86400000  # 24시간 (밀리초)

#############################################
# Google OAuth 2.0
#############################################
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

#############################################
# Application Settings
#############################################
APP_PORT=8080
APP_REPLICAS=2  # 프로덕션 인스턴스 수

#############################################
# Build Information
#############################################
VERSION=1.0.0
BUILD_DATE=2025-01-01T00:00:00Z
